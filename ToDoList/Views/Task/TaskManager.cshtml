@{
}


@{
    ViewData["Title"] = "Task Manager";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Task Manager</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f6f8;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin: 40px auto;
            background: #fff;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        /* Form */
        .task-form {
            display: flex;
            gap: 10px;
            margin-bottom: 30px;
        }

        .task-form input,
        .task-form select {
            flex: 1;
            padding: 10px;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

        .task-form button {
            padding: 10px 20px;
            border: none;
            background: #4CAF50;
            color: white;
            border-radius: 6px;
            cursor: pointer;
        }

        .task-form button:hover {
            background: #43a047;
        }

        /* Table */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background: #f0f0f0;
        }

        tr {
            border-bottom: 1px solid #ddd;
        }

        .status {
            padding: 5px 10px;
            border-radius: 12px;
            font-size: 12px;
            color: white;
        }

        .pending {
            background: orange;
        }

        .done {
            background: green;
        }

        .actions button {
            margin-right: 5px;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .edit {
            background: #2196F3;
            color: white;
        }

        .delete {
            background: #f44336;
            color: white;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>?? Task Manager</h1>

        <!-- Add Task Form -->
        <form class="task-form" method="post">
            <input type="text" name="Title" placeholder="Task title" />
            <select name="Status">
                <option value="Pending">Pending</option>
                <option value="Done">Done</option>
            </select>
            <button type="submit">Add</button>
        </form>

        <!-- Task List -->
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Task</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Learn ASP.NET MVC</td>
                    <td><span class="status pending">Pending</span></td>
                    <td class="actions">
                        <button class="edit">Edit</button>
                        <button class="delete">Delete</button>
                    </td>
                </tr>

                <tr>
                    <td>2</td>
                    <td>Create Task Manager</td>
                    <td><span class="status done">Done</span></td>
                    <td class="actions">
                        <button class="edit">Edit</button>
                        <button class="delete">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

</body>
</html>
